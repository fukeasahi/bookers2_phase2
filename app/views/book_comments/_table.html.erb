<table>
  <% book_comments.each do |book_comment| %>
    <tr>
      <td><%= attachment_image_tag(book_comment.user, :profile_image, size: "100x100", fallback: "no-image-icon.jpg") %></td>
      <td><%= book_comment.comment %></td>
      <td>
	      <% if book_comment.user == current_user %>
	      	<div>
	        	<%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote:true, class: "btn btn-danger pull-right" %>
	      	</div>
	      <% end %>
      </td>
    </tr>
  <% end %>
</table>
